# Use Python as base image
FROM python:3.9

# Set working directory
WORKDIR /app

# Copy requirements.txt and install dependencies
COPY requirements.txt .  
RUN pip install --no-cache-dir -r requirements.txt  

# Copy the rest of the app files  
COPY . .  

# Expose port 5000
EXPOSE 5000

# Start Flask app
CMD ["python", "app.py"]

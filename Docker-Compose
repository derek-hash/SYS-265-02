version: '3'
services:
  backend:
    build: ./backend
    ports:
      - "5000:5000"  # Backend on port 5000
    volumes:
      - ./backend:/app
    networks:
      - task-manager-net

  frontend:
    build: ./frontend
    ports:
      - "8080:80"  # Frontend on port 8080
    networks:
      - task-manager-net
    depends_on:
      - backend

networks:
  task-manager-net:
    driver: bridge
